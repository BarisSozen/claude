# DeFi Bot Environment Variables
# Copy this file to .env and fill in your values
# SECURITY WARNING: Never commit your actual .env file to version control!

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# RPC URLs (Required - use private/dedicated nodes in production)
# WARNING: Public RPC endpoints have rate limits and may expose your transactions
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# Encryption Key (Required - 32 bytes hex encoded = 64 characters)
# CRITICAL: Generate a secure random key for production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# WARNING: The application will refuse to start with an all-zeros key in production
ENCRYPTION_KEY=<GENERATE_WITH_CRYPTO_RANDOM_BYTES_32>

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/defi_bot
REDIS_URL=redis://localhost:6379

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# WalletConnect (Required for frontend wallet connections)
VITE_WALLETCONNECT_PROJECT_ID=your_project_id

# CORS Origin (for production - set to your frontend domain)
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# MEV Protection (Optional but recommended for production)
# FLASHBOTS_SIGNER_KEY=<your_flashbots_signer_private_key>
# BLOXROUTE_API_KEY=<your_bloxroute_api_key>
# MEV_PROVIDER=flashbots  # Options: flashbots, bloxroute, both

# Rust Core gRPC (Optional - defaults shown)
# GRPC_HOST=localhost
# GRPC_PORT=50051

# Risk Management (Optional - defaults shown)
# MAX_PRICE_IMPACT=0.02
# MIN_PROFIT_USD=0.01
# SCAN_INTERVAL_MS=5000

# =============================================================================
# OBSERVABILITY CONFIGURATION
# =============================================================================

# Distributed Tracing with Jaeger (Optional - recommended for production)
# TRACING_ENABLED=true
# JAEGER_ENDPOINT=http://localhost:14268/api/traces
# TRACE_SAMPLE_RATE=1.0  # 0.0-1.0, use 0.1-0.3 for high-traffic production

# Jaeger deployment example (docker-compose):
# jaeger:
#   image: jaegertracing/all-in-one:1.52
#   ports:
#     - "16686:16686"  # Jaeger UI
#     - "14268:14268"  # Collector HTTP endpoint
#   environment:
#     - COLLECTOR_OTLP_ENABLED=true
